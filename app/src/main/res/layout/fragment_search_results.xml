<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textSize="36dp"
        android:id="@+id/fragment_search_results_editText_start" android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textSize="36dp"
        android:id="@+id/fragment_search_results_editText_finish"
        android:layout_below="@+id/fragment_search_results_editText_start" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="20.12.2015"
        android:textSize="36dp"
        android:id="@+id/fragment_search_results_textView_data" android:layout_gravity="center_horizontal"
        android:layout_above="@+id/fragment_search_results_textView_not_way"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:id="@+id/fragment_search_results_button_back_data"
        android:background="@drawable/ic_chevron_left_white_24dp"
        android:layout_alignBottom="@+id/fragment_search_results_textView_data"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <Button
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:id="@+id/fragment_search_results_button_next_data" android:layout_gravity="right"
        android:background="@drawable/ic_chevron_right_white_24dp"
        android:layout_below="@+id/fragment_search_results_editText_finish" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/fragment_search_results_textView_not_way" android:layout_below="@+id/fragment_search_results_button_next_data"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_search_results_listView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" android:layout_below="@+id/fragment_search_results_textView_data"/>

</RelativeLayout>