<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color_fon">

    <include android:id="@+id/search_infa"
        layout="@layout/field_start_and_finish"></include>

    <TextView
        android:id="@+id/data_new_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="30sp"
        android:textColor="@color/field_date_text"
        android:text="12.05.2017"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:paddingLeft="80dp"
        android:layout_below="@+id/search_infa"
        android:layout_centerHorizontal="true">
    </TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textSize="20sp"
        android:text="@string/search"
        android:textColor="@color/color_text_main"
        android:background="@color/av_registration"
        android:id="@+id/button_search" android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
